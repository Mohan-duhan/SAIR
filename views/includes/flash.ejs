<% if(success && success.length) { %>
<div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-3 border-success" role="alert">
    <%= success %>
    <button type="button" 
    class="btn-close" 
    data-bs-dismiss="alert"
    aria-label="Close">
</button>
</div>

<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3 border-danger" role="alert">
        <%= error %>
        <button type="button" 
        class="btn-close" 
        data-bs-dismiss="alert"
        aria-label="Close">
    </button>
    </div>
    
    <% } %>